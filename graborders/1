server {
    listen 443 ssl;
    server_name namnooamna.com www.namnooamna.com;

    ssl_certificate /etc/ssl/bundle.crt;
    ssl_certificate_key /etc/ssl/private.key;

    # FIX: Consistent root path
    root /var/www/namnooamna/html;
    index index.html;

    # Allow larger uploads (fixes 413 error)
    client_max_body_size 100M;

    # === APK File Configuration ===
    location ~* \.apk$ {
        # Set correct MIME type for APK files
        add_header Content-Type application/vnd.android.package-archive;
        add_header Content-Disposition "attachment; filename=namnooamna.apk";
        
        # Enable CORS for cross-origin downloads
        add_header Access-Control-Allow-Origin "*";
        add_header Access-Control-Allow-Methods "GET, HEAD";
        
        # Cache control
        add_header Cache-Control "public, max-age=3600";
        
        # Security headers
        add_header X-Content-Type-Options "nosniff";
        
        # Try to serve the file
        try_files $uri =404;
    }

    # === Static files (images, CSS, JS) ===
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|webp|svg)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        try_files $uri =404;
    }

    # === Socket.IO WebSocket proxy ===
    location /socket.io/ {
        proxy_pass http://159.198.40.24:8084;
        
        # Essential WebSocket headers
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeout settings for WebSocket
        proxy_read_timeout 86400;
        proxy_send_timeout 86400;
        proxy_connect_timeout 86400;
    }

    # === API proxy ===
    location /api/ {
        proxy_pass http://159.198.40.24:8085/api/;

        # WebSocket support (if API also uses WS)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Preserve headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # === Default (React build) ===
    location / {
        # FIX: Remove duplicate root directive
        try_files $uri $uri/ /index.html =404;
    }
}

server {
    listen 80;
    server_name namnooamna.com www.namnooamna.com;
    return 301 https://$server_name$request_uri;
}